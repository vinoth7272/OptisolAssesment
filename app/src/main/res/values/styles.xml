<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="title_text_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="desc_text_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/desc_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="time_txt_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/time_text_size</item>
    </style>
</resources>